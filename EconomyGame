namespace prog {

    public class program {

        class person {

            public string name;
            public int money = 599;

            public int Work() {
                
                person MyPerson = new person();
                
                if (this.money >= 0) {

                    this.money = this.money + 500;
                    
                    
                }

                return this.money;
                
            }

            public string nameSelect() {

                this.name = Console.ReadLine();

                return this.name;
            }
        
        }

        static void Main(String[] args)
        {
            person Myperson= new person();
            Myperson.nameSelect();
            Myperson.Work();
            Console.WriteLine(Myperson.money);
            Console.WriteLine(Myperson.name);
        }
    
    }

}
